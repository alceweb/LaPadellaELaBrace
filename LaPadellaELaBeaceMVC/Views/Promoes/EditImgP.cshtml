@model LaPadellaELaBeaceMVC.Models.Promo

@{
    ViewBag.Title = "EditImgP";
}

<h2>Gestione immagini</h2>
<h4>
    Immagine <span class="badge">@Html.DisplayFor(model => model.Nome)</span>
</h4><hr />
@using (Html.BeginForm("EditImgP", "Promoes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <input type="file" name="file" id="file" />
    <p><span class="label label-success">Consigliata immagine quadrata 500x500</span></p>
    <h4><span class="label label-danger">@ViewBag.Message</span></h4>
    <input type="submit" value="Upload Image" />
}
<hr />

<div class="row">
    <div class="col col-md-2 text-center">
        <span class="galla1">
            <a href="@Url.Content("~/Content/Immagini/" + Model.Promo_Id + ".jpg")" data-lightbox="example-set"><img class="example-image" src="@Url.Content("~/Content/Immagini/" + Model.Promo_Id + ".jpg")" /></a>
        </span>
    </div>
</div>


